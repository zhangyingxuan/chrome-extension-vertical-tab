{
  "manifest_version": 3,
  "name": "侧边栏Tab管理器",
  "version": "1.0",
  "description": "一个支持分组、拖动排序和固定标签的侧边栏Tab管理器",
  "permissions": ["tabs", "storage", "sidePanel"],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Click to open side panel tabs",
    "default_icon": "./sources/tab16.png"
  },
  "icons": {
    "16": "sources/tab16.png",
    "48": "sources/tab48.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
