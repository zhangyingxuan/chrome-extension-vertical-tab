{
  "manifest_version": 3,
  "name": "侧边栏Tab管理器",
  "version": "1.0",
  "description": "一个支持分组、拖动排序和固定标签的侧边栏Tab管理器",
  "permissions": ["tabs", "tabGroups", "storage", "sidePanel"],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "点击打开侧边栏管理标签页",
    "default_icon": "./sources/tabs256.png"
  },
  "icons": {
    "48": "sources/tabs64.png",
    "128": "sources/tabs128.png",
    "256": "sources/tabs256.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["http://*/*", "https://*/*"]
}
